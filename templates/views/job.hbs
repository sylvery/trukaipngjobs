<div class="container-fluid">
	<section class="header">
		<article class="row">
			<style type="text/css">
				.job-image.featured-image {
					width: 100%;
					height: 250px;
				    background-repeat-x: no-repeat;
				    background-position: center;
				}
			</style>
			<div class="job-image featured-image" style="background-image: {{#if data.job.image}}url({{{cloudinaryUrl data.job.image}}}){{/if}}"></div>
			<header class="page-heading col-sm-12 jumbotron">
				<h1>{{data.job.title}}</h1>
				<h5 class="text-muted small">
					{{{categoryList data.job.categories prefix="Posted in "}}}
					{{#if author.name}}by {{author.name}}{{/if}}
				</h5>
			</header>
			<hr>
			<p><a href="/jobs">&larr; back to job listings</a></p>
			<hr>
		</article>
	</section>
	<section class="content container">
		<article class="row">
			<div class="content col-xs-12 col-sm-8 col-md-9">
				{{{data.job.content.extended}}}
				<p>Applications will close on {{date data.job.expiryDate format='DD MMMM YYYY' }}.</p>
			</div>
			<div class="col-xs-12 col-sm-4 col-md-3">
				<div class="page-heading">Sidebar listing all jobs in the same category here</div>
				{{# each data.jobs.results}}
								<div data-ks-editable="{{#if ../user}}{{adminEditableUrl ../../user _id}}{{/if}}" class="job">
					<div class="col-sm-4 col-md-3">{{#if image}}<img src="{{{cloudinaryUrl image width=260 height=260 crop='fit' }}}" class="img pull-left">{{/if}}</div>
					<div class="col-sm-8 col-md-9">
						<h2><a href="{{jobUrl slug}}">{{{title}}}</a></h2>
						<p class="lead text-muted">
							<!-- <span>{{#if author.name}}{{author.name}}{{/if}}</span> -->
							<span class="">{{{categoryList categories suffix=" Job"}}}</span>
							<p>Applications will close on {{date expiryDate format='DD MMMM YYYY' }}.</p>
						</p>
					</div>
					<div class="col-sm-12">
						<p>{{{content.brief}}}</p>
						{{#if content.extended}}<p class="read-more"><a href="{{jobUrl slug}}">Read more...</a></p>{{/if}}
					</div>
				</div>

				{{/each}}
			</div>
		</article>
	</section>
</div>
