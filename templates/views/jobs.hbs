<div class="container">
	<div class="row">
		<!-- <h4 class="text-weight-normal col-xs-12 col-sm-12 col-md-12 col-lg-12">Showing {{ data.jobs.results.length}} jobs.</h4> -->
		<div class="jobs-wrapper padded col-xs-12 col-sm-12 col-md-12 col-lg-12">
			{{# each data.jobs.results}}
			<div data-ks-editable="{{#if ./user}}{{adminEditableUrl ./../user _id}}{{/if}}" class="row">
				<div class="col-sm-4 col-md-3 col-lg-6">{{#if image}}<img src="{{{cloudinaryUrl image width=260 height=260 crop='fit' }}}" class="img-responsive pull-left">{{/if}}</div>
				<div class="col-sm-8 col-md-9 col-lg-6">
					<h3><a href="{{jobUrl slug}}">{{{title}}}</a></h3>
					<p class="text-muted">
						<!-- <span>{{#if author.name}}{{author.name}}{{/if}}</span> -->
						<span class="">{{{categoryList categories suffix=" Job"}}}</span>
						<p>Applications will close on {{date expiryDate format='DD MMMM YYYY' }}</p>
					</p>
				</div>
				<div class="col-sm-12 col-md-12 col-lg-12">
					<p>{{{content.brief}}}</p>
					{{#if content.extended}}<p class="read-more"><a href="{{jobUrl slug}}">Read more...</a></p>{{/if}}
				</div>
			</div>
			{{/each}}
		</div>
	</div>
	{{>pagination}}
</div>
